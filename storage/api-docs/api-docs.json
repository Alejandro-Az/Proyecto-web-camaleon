{
    "openapi": "3.0.0",
    "info": {
        "title": "API Eventos Camaleón",
        "description": "Documentación de los endpoints de la plataforma de eventos tipo camaleón (boda, XV, cumpleaños, etc.).",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Servidor base de la API"
        }
    ],
    "paths": {
        "/api/admin/events/{event}/photos": {
            "post": {
                "tags": [
                    "Eventos (Admin)"
                ],
                "summary": "Subir una foto a la galería de un evento",
                "description": "Permite subir una imagen (multipart/form-data) para la galería o portada de un evento. Recomendado proteger este endpoint con autenticación (por ejemplo, auth:sanctum) para uso exclusivo del organizador o administrador.",
                "operationId": "adminUploadEventPhoto",
                "parameters": [
                    {
                        "name": "event",
                        "in": "path",
                        "description": "ID del evento al que se asociará la foto",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "photo"
                                ],
                                "properties": {
                                    "photo": {
                                        "description": "Archivo de imagen a subir",
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "type": {
                                        "description": "Tipo de foto (galería o portada)",
                                        "type": "string",
                                        "enum": [
                                            "gallery",
                                            "hero"
                                        ]
                                    },
                                    "caption": {
                                        "description": "Texto descriptivo opcional de la foto",
                                        "type": "string",
                                        "maxLength": 255
                                    },
                                    "display_order": {
                                        "description": "Orden opcional de despliegue en la galería",
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Foto creada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "event_id": {
                                            "type": "integer"
                                        },
                                        "type": {
                                            "type": "string"
                                        },
                                        "caption": {
                                            "type": "string",
                                            "nullable": true
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "display_order": {
                                            "type": "integer"
                                        },
                                        "file_url": {
                                            "type": "string"
                                        },
                                        "thumbnail_url": {
                                            "type": "string",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Errores de validación en la carga de la foto"
                    },
                    "404": {
                        "description": "Evento no encontrado"
                    }
                }
            }
        },
        "/eventos/{slug}": {
            "get": {
                "tags": [
                    "Eventos Públicos"
                ],
                "summary": "Ver la página pública de un evento",
                "description": "Devuelve la página HTML pública de un evento identificado por su slug. La página puede incluir módulos como galería de fotos, RSVP, lista pública de asistentes, sugerencia de canciones y votos, dependiendo de la configuración del evento.",
                "operationId": "publicShowEvent",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Slug del evento (por ejemplo, boda-prueba-ana-luis)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Página HTML con la información pública del evento y sus módulos activos."
                    },
                    "404": {
                        "description": "Evento no encontrado o no visible públicamente."
                    }
                }
            }
        },
        "/eventos/{slug}/rsvp": {
            "post": {
                "tags": [
                    "RSVP"
                ],
                "summary": "Registrar/actualizar la confirmación de asistencia de un invitado",
                "description": "Actualiza el RSVP de un invitado identificado por su código de invitación para un evento público.",
                "operationId": "eceabbe93d3fa6585eb75313095723a1",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Slug del evento (por ejemplo, boda-prueba-ana-luis)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "invitation_code",
                                    "rsvp_status"
                                ],
                                "properties": {
                                    "invitation_code": {
                                        "type": "string",
                                        "example": "DEMO1234"
                                    },
                                    "rsvp_status": {
                                        "type": "string",
                                        "enum": [
                                            "yes",
                                            "no",
                                            "maybe"
                                        ],
                                        "example": "yes"
                                    },
                                    "guests_confirmed": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "rsvp_message": {
                                        "type": "string",
                                        "example": "¡Nos vemos ahí!"
                                    },
                                    "show_in_public_list": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "302": {
                        "description": "Redirección de vuelta a la página del evento con mensaje de éxito o error"
                    }
                }
            }
        },
        "/eventos/{slug}/canciones": {
            "post": {
                "tags": [
                    "Eventos Públicos"
                ],
                "summary": "Sugerir una canción para el evento",
                "description": "Registra una nueva canción sugerida para la playlist del evento. \n     *                  Soporta respuestas HTML (redirect) y JSON (AJAX) según el encabezado Accept.",
                "operationId": "publicSuggestSong",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Slug del evento (por ejemplo, boda-prueba-ana-luis)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "invitation_code",
                                    "title"
                                ],
                                "properties": {
                                    "invitation_code": {
                                        "type": "string",
                                        "example": "DEMO1234"
                                    },
                                    "title": {
                                        "type": "string",
                                        "example": "Perfect"
                                    },
                                    "artist": {
                                        "type": "string",
                                        "example": "Ed Sheeran"
                                    },
                                    "url": {
                                        "type": "string",
                                        "example": "https://open.spotify.com/track/..."
                                    },
                                    "message_for_couple": {
                                        "type": "string",
                                        "example": "Para el primer baile"
                                    },
                                    "show_author": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Canción sugerida correctamente (respuesta JSON cuando se usa AJAX)."
                    },
                    "302": {
                        "description": "Redirección a la página del evento con mensaje flash de éxito o error (uso tradicional de formulario HTML)."
                    },
                    "422": {
                        "description": "Error de validación, invitación no encontrada, límite alcanzado o canción duplicada."
                    },
                    "404": {
                        "description": "Evento no encontrado o no visible públicamente."
                    }
                }
            }
        },
        "/eventos/{slug}/canciones/{song}/votar": {
            "post": {
                "tags": [
                    "Eventos Públicos"
                ],
                "summary": "Votar o quitar voto a una canción del evento",
                "description": "Alterna el voto del invitado actual sobre una canción específica del evento. \n     *                  Soporta HTML (redirect) y JSON (AJAX).",
                "operationId": "publicVoteSong",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Slug del evento",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "song",
                        "in": "path",
                        "description": "ID de la canción del evento",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "invitation_code"
                                ],
                                "properties": {
                                    "invitation_code": {
                                        "type": "string",
                                        "example": "DEMO1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Voto registrado o retirado correctamente (JSON)."
                    },
                    "302": {
                        "description": "Redirección a la página del evento con mensaje flash."
                    },
                    "422": {
                        "description": "Invitación no encontrada o límite de votos alcanzado."
                    },
                    "404": {
                        "description": "Evento o canción no encontrados."
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Eventos Públicos",
            "description": "Endpoints públicos relacionados con la visualización de eventos."
        },
        {
            "name": "RSVP",
            "description": "Endpoints para la confirmación de asistencia de invitados (RSVP)."
        },
        {
            "name": "Eventos (Admin)",
            "description": "Eventos (Admin)"
        }
    ]
}